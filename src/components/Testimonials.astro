---
import { siteData } from '../data/site';
const { testimonials } = siteData;
---

<section id="testimonials" class="py-20 bg-gradient-to-b from-gray-50 to-white reveal">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-2 bg-success-100 text-success-700 text-sm font-semibold rounded-full mb-4">
        Testimonios
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-display">
        Lo que dicen nuestros clientes
      </h2>
      <p class="text-lg text-gray-600">
        La confianza de nuestros clientes es nuestro mayor respaldo.
      </p>
    </div>

    <!-- Testimonials grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 stagger-container">
      {testimonials.map((testimonial) => (
        <div class=" bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100">
          <!-- Stars -->
          <div class="flex items-center mb-4">
            {Array.from({ length: testimonial.rating }).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <p class="text-gray-700 mb-6 leading-relaxed italic">
            "{testimonial.text}"
          </p>

          <!-- Author -->
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-400 to-teal-400 flex items-center justify-center text-white font-bold text-lg mr-4">
              {testimonial.name.split(' ').map(n => n[0]).join('')}
            </div>
            <div>
              <div class="font-semibold text-gray-900">{testimonial.name}</div>
              <div class="text-sm text-gray-600">{testimonial.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust badge -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-8 px-8 py-6 bg-white rounded-xl shadow-md">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary-600 mb-1">50+</div>
          <div class="text-sm text-gray-600">Clientes satisfechos</div>
        </div>
        <div class="h-12 w-px bg-gray-200"></div>
        <div class="text-center">
          <div class="text-3xl font-bold text-teal-600 mb-1">100%</div>
          <div class="text-sm text-gray-600">Garant√≠a en productos</div>
        </div>
        <div class="h-12 w-px bg-gray-200"></div>
        <div class="text-center">
          <div class="text-3xl font-bold text-success-600 mb-1">24h</div>
          <div class="text-sm text-gray-600">Tiempo de respuesta</div>
        </div>
      </div>
    </div>
  </div>
</section>
