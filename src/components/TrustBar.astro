---
import { siteData } from "../data/site";
const { trust } = siteData;
---

<section
  id='trust'
  class='py-16 bg-white reveal'>
  <div class='container mx-auto px-4 lg:px-8'>
    <div
      class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-container'>
      {
        trust.map((item) => (
          <div class='flex flex-col items-center text-center p-6 rounded-xl bg-gray-50 hover:bg-primary-50 transition-colors duration-300 group'>
            <div class='w-16 h-16 rounded-full bg-primary-100 flex items-center justify-center mb-4 group-hover:bg-primary-200 transition-colors'>
              {item.icon === "consultation" && (
                <svg
                  class='w-8 h-8 text-primary-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z'
                  />
                </svg>
              )}
              {item.icon === "delivery" && (
                <svg
                  class='w-8 h-8 text-primary-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4'
                  />
                </svg>
              )}
              {item.icon === "support" && (
                <svg
                  class='w-8 h-8 text-primary-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'
                  />
                </svg>
              )}
              {item.icon === "institution" && (
                <svg
                  class='w-8 h-8 text-primary-600'
                  fill='none'
                  stroke='currentColor'
                  viewBox='0 0 24 24'>
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='2'
                    d='M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
                  />
                </svg>
              )}
            </div>
            <h3 class='text-lg font-semibold text-gray-900 mb-2 font-display'>
              {item.title}
            </h3>
            <p class='text-sm text-gray-600'>{item.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
